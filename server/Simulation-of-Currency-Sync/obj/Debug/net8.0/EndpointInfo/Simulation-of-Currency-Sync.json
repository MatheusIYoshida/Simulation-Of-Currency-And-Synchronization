            "format": "int32"
          },
          "city": {
            "minLength": 1,
            "type": "string"
          },
          "admin": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "UserDTO": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
